@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model Insurance.Domain.Garage

@{
    ViewBag.Title = _localizer["Details"];
    Layout = "_Layout";
}

<h2>@_localizer["Garage Details"]</h2>
<div class="form-row">
    <div class="form-group col-md-1">
      <label for="id">@_localizer["Id"]</label>
      <input type="number" class="form-control" id="id" disabled>
    </div>
    <div class="form-group col-md-5">
      <label for="name">@_localizer["Name"]</label>
      <input type="text" class="form-control" id="name" required>
    </div>
    <div class="form-group col-md-6">
      <label for="telnr">@_localizer["Telnr"]</label>
      <!-- pattern="+32[0-9]{9}" -->
      <input   type="tel" class="form-control" id="telnr" required>
    </div>
  </div>
<div class="form-group">
  <label for="address">@_localizer["Address"]</label>
  <input type="text" class="form-control" id="address" required>
</div>
<button id="editgarage" class="btn btn-primary">@_localizer["Edit"]</button>
<div class="alert alert-success invisible" role="alert" id="successfully">
  @_localizer["Edited garages succesfully."]
</div>
<div class="alert alert-danger invisible" role="alert" id="error">
  @_localizer["Wrong data given."]
</div>

@section Scripts {
  <script src="~/js/garage/details.js" defer></script>
}