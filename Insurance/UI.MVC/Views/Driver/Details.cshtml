@model Insurance.Domain.Driver

@{
    ViewBag.Title = "Drivers";
    Layout = "_Layout";
}

<h2>Driver Details</h2>
<table>
    <tr>
        <th>Full Name</th><td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <th>Social Number</th><td>@Model.SocialNumber</td>
    </tr>
    <tr>
        <th>Date of Birth</th><td>@Model.DateOfBirth.ToString("dd MMMM yyyy")</td>
    </tr>
</table>


<h3>Cars for this Driver</h3>

<table id="cars" class="table">
    <thead class="thead-light">
    <tr>
        <th scope="col">Brand</th>
        <th scope="col">Fuel</th>
        <th scope="col">Purchaseprice</th>
        <th scope="col">Seats</th>
        <th scope="col">Miles</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<h3>Add Car</h3>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="car">Car</label>
      <select id="car" class="form-control">
      </select>
    </div>
      <div class="form-group col-md-3">
      <label for="price">Price</label>
      <input type="number" step="100.0" class="form-control" id="price" disabled="disabled">
    </div>
  </div>
<div class="form-row">
    <div class="form-group col-md-3">
        <label for="from">From</label>
        <input type="date" class="form-control" id="from" min="@DateTime.Now.Date">
    </div>
    <div class="form-group col-md-3">
        <label for="until">Until</label>
        <input type="date" class="form-control" id="until" min="@DateTime.Now.AddDays(2).Date">
    </div>
</div>
<button type="button" class="btn btn-primary" id="addCar">Add Car</button>
<div class="alert alert-success invisible" role="alert" id="successfully">
  added new rental succesfully.
</div>
<div class="alert alert-danger invisible" role="alert" id="error">
  Wrong data given.
</div>
@section Scripts {
    <script src="~/js/driver/details.js" defer></script>
}