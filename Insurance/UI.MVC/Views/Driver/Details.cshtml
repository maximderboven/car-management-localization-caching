@inject IViewLocalizer _localizer
@using Microsoft.AspNetCore.Mvc.Localization
@model Insurance.Domain.Driver

@{
    ViewBag.Title = _localizer["Drivers"];
    Layout = "_Layout";
}

<h2>Driver Details</h2>
<table>
    <tr>
        <th>@_localizer["Full Name"]</th><td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <th>@_localizer["Social Number"]</th><td>@Model.SocialNumber</td>
    </tr>
    <tr>
        <th>@_localizer["Date of Birth"]</th><td>@Model.DateOfBirth.ToShortDateString()</td>
    </tr>
</table>


<h3>@_localizer["Cars for this Driver"]</h3>

<table id="cars" class="table">
    <thead class="thead-light">
    <tr>
        <th scope="col">@_localizer["Brand"]</th>
        <th scope="col">@_localizer["Fuel"]</th>
        <th scope="col">@_localizer["Purchaseprice"]</th>
        <th scope="col">@_localizer["Seats"]</th>
        <th scope="col">@_localizer["Miles"]</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<h3>@_localizer["Add Car"]</h3>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="car">@_localizer["Car"]</label>
      <select id="car" class="form-control">
      </select>
    </div>
      <div class="form-group col-md-3">
      <label for="price">@_localizer["Price"]</label>
      <input type="number" step="100.0" class="form-control" id="price" disabled="disabled">
    </div>
  </div>
<div class="form-row">
    <div class="form-group col-md-3">
        <label for="from">@_localizer["From"]</label>
        <input type="date" class="form-control" id="from" min="@DateTime.Now.Date">
    </div>
    <div class="form-group col-md-3">
        <label for="until">@_localizer["Until"]</label>
        <input type="date" class="form-control" id="until" min="@DateTime.Now.AddDays(2).Date">
    </div>
</div>
<button type="button" class="btn btn-primary" id="addCar">@_localizer["Add Car"]</button>
<div class="alert alert-success invisible" role="alert" id="successfully">
  @_localizer["added new rental succesfully."]
</div>
<div class="alert alert-danger invisible" role="alert" id="error">
  @_localizer["Wrong data given."]
</div>
@section Scripts {
    <script src="~/js/driver/details.js" defer></script>
}